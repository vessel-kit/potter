{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "sourceRoot": "src/",
    "typeRoots": [
      "node_modules/@types", "../../types"
    ]
  },
  "exclude": ["node_modules", "dist"]
}
