{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": ["node", "jest"]
  },
  "include": ["./types", "./src"],
  "exclude": ["node_modules", "dist"]
}
