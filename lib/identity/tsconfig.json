{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist/",
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "typedocOptions": {
    "mode": "library",
    "out": "docs",
    "exclude": "**/*+(.spec|.test|.e2e).ts"
  }
}
